<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/gradient_bg"
    tools:context=".TrigActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:elevation="12dp"
        android:padding="30dp"
        app:cardBackgroundColor="#2D2F41"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- Main Heading -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Activate Trigger"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hold the volume up/down button for 5 seconds or shake your device  to send an SOS alert along with your current location to your registered contacts."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:lineSpacingExtra="5dp" />

            <!-- ðŸ”¹ ADD THIS BUTTON -->
            <Button
                android:id="@+id/triggerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send SOS"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
